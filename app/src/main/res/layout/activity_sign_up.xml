<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="builderspace.tripadvisor.controller.activities.SignUpActivity">

    <EditText
        android:id="@+id/editTextSignUpFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextSignUpLastName"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextSignUpLastName"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextSignUpLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSignUpFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextSignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerGender"
        android:layout_alignStart="@+id/spinnerGender"
        android:layout_below="@+id/spinnerGender"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextSignUpPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextSignUpEmail"
        android:layout_alignStart="@+id/editTextSignUpEmail"
        android:layout_below="@+id/editTextSignUpEmail"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Choose Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextSignUpRepeatPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextSignUpPassword"
        android:layout_alignStart="@+id/editTextSignUpPassword"
        android:layout_below="@+id/editTextSignUpPassword"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Repeat Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonCancel"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextSignUpRepeatPassword"
        android:layout_alignStart="@+id/editTextSignUpRepeatPassword"
        android:layout_below="@+id/editTextSignUpRepeatPassword"
        android:layout_marginTop="11dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonSignUp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextSignUpRepeatPassword"
        android:layout_alignRight="@+id/editTextSignUpRepeatPassword"
        android:layout_alignTop="@+id/buttonCancel"
        android:text="Sign Up" />

    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextSignUpLastName"
        android:layout_alignLeft="@+id/editTextSignUpLastName"
        android:layout_alignRight="@+id/editTextSignUpLastName"
        android:layout_alignStart="@+id/editTextSignUpLastName"
        android:layout_below="@+id/editTextSignUpLastName"
        android:layout_marginTop="17dp" />

    <ImageView
        android:id="@+id/imageViewProfilePic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/selfprofile" />

</RelativeLayout>
