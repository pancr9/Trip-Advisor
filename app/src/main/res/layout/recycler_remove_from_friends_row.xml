<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cvRemoveFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:id="@+id/person_photo2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:padding="4dp"
                app:srcCompat="@drawable/selfprofile" />

            <TextView
                android:id="@+id/person_fname2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:text="First Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person_lname2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/person_fname2"
                android:layout_below="@+id/person_fname2"
                android:text="Last Name" />

            <ImageView
                android:id="@+id/imageViewClick2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/delete" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>